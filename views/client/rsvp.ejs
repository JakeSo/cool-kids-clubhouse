<%- include('../partials/header.ejs') %>
<main>
  <head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>    
    <link rel="stylesheet" href="/css/style.css" />
  </head>
<div class="container-md">
<div class="card rsvp">
  <div class="row justify-content-center align-items-center">
    <div class="event-details">
        <h1><%=event.title%></h1>
        <h5><%= event.location%> <br> <%= event.date%></h5>
          <hr>
    </div>
        <form action="/client/<%= id%>/rsvp/" method="POST">
            <div class="form-group">
              <!--<label for="name" class="form-label">Name:</label>
              <input class="form-control" type="name" name="name" placeholder="Enter your name:">
              <label for="email" class="form-label">Email:</label>
              <input class="form-control" type="email" name="email" placeholder="Enter your email:"> -->
              <label for="going" class="form-label">Going?</label>
              <select name="going" id="going">
                <option value="yes">Yes</option>
                <option value="no">No</option>
                <option value="maybe">Maybe</option>
              </select>
              <br>
              <label for="guests" class="form-label">Guests:</label>
              <input class="form-control" style="width: 70px;" type="number" name="guests" id="guests" value="0" placeholder="Guests:">
              
              <button type="submit" class="btn btn-primary" value="RSVP" style="vertical-align: middle;">RSVP</button>
            </div>
        </form>
  </div>
</div>
</div>
</main>
<%- include('../partials/footer.ejs') %>